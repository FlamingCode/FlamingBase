{
	"name": "flaming-code/flaming-base",
	"description": "Module that provides common functionality and library code for ZF2 applications",
	"type": "library",
	"license": "MIT",
	"homepage": "https://github.com/FlamingCode/FlamingBase",
	"keywords": [
		"flamingbase",
		"module",
		"zf2",
		"zend"
	],
	"authors": [
		{
			"name": "Flemming Andersen",
			"email": "flemming@flamingcode.com",
			"homepage": "http://flamingcode.com/"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.3.3",
		"zendframework/zend-modulemanager": "2.*",
		"zendframework/zend-servicemanager": "2.*",
		"zendframework/zend-mvc": "2.*",
		"zendframework/zend-form": "2.*",
		"zendframework/zend-view": "2.*",
		"zendframework/zend-serializer": "2.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~3.7"
	},
	"suggest": {
		"doctrine/doctrine-module": "If you want to use Doctrine",
		"doctrine/doctrine-orm-module": "If you want to use Doctrine",
		"coremax/core-bootstrap": "This module provides some extra goodness for the core-bootstrap module"
	},
	"autoload": {
		"psr-0": {
			"FlamingBase\\": "src/",
			"FlamingBaseTest\\": "tests/"
		},
		"classmap": [
                	"./"
        	]
	}
}
